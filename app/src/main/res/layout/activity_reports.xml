<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tabMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2,3,4">
            <TableRow
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp">

                <TextView
                    android:id="@+id/customer_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="1dp"
                    android:layout_weight="1.3"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="Cliente"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#380202"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/prduct_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_margin="1dp"
                    android:layout_weight="1.3"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Producto"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#380202"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/debit_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Debito"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#380202"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rebate_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="3"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Reembolso"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#380202"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="4"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Total"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#380202"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
        <ListView
            android:id="@+id/list_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/edit_pro" />

</RelativeLayout>